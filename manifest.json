{
  "manifest_version": 2,
  "name": "BrowsingInsights",
  "description": "Gain insights about your browsing activity and participate in scientific research",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "webNavigation",
    "unlimitedStorage",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "persistent": true,
    "scripts": [
      "bower_components/jquery/dist/jquery.min.js",
      "bower_components/async/dist/async.min.js",
      "bower_components/js-yaml/dist/js-yaml.min.js",
      "minimongo.js",
      "memoize.js",
      "background_common.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "page_action": {
    "default_icon": {
      "19": "icon_19.png",
      "38": "icon_38.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  }
}
